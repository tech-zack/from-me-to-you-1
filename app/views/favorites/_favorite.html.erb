<%= turbo_frame_tag "favorite_btn" do %>
<div class="favorite-wrapper">
  <div class="text-center">
    <% if user_signed_in? && current_user != @post.user %>
      <% if current_user.favorite_find(@post.id) %>
        <%= link_to 'お気に入りからはずす', post_favorites_path(@post.id), data: { turbo_method: :delete },class:"favorite-btn btn-outline-success" %>
      <% else %>
        <%= link_to 'お気に入り登録する', post_favorites_path(@post.id), data: { turbo_method: :post },class:"favorite-btn btn-outline-success" %>
      <% end %>
    <% end %>
  </div>
</div>
<% end %>