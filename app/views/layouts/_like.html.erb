<div class="like-wrapper">
  <div class="text-center">
    <% if user_signed_in? %>
      <% if @post.liked_by?(current_user) %>
        <%= link_to post_likes_path(@post.id), data: { turbo_method: :delete },class:"like-btn" do %>
          ♥<%= @post.likes.count %> いいね
        <% end %>
      <% else %>
        <%= link_to post_likes_path(@post.id), data: { turbo_method: :post },class: "like-btn" do %>
          ♡<%= @post.likes.count %> いいね
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
