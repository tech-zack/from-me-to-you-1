            <li><%=link_to '届ける', new_post_path, class: "dropdown-item"%></li>
            <li><%=link_to '探す', posts_index_path, class: "dropdown-item"%></li>
          </ul>
        </li>
      </ul>
      <form class="d-flex">
        <input class="form-control me-2" type="search" placeholder="検索" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">検索</button>
      </form>
    </div>
  </div>
