<div class="post-container">
  <%= image_tag @post.image, class: "card-img"%>
  <div class="post-card-body">
    <p class="text-center">カテゴリー<%=@post.category.name%></p>
    <h2 class="text-center"><%=safe_join(@post.title.split("\n"),tag(:br))%></h2>
    <h4 class="text-center"><%=safe_join(@post.text.split("\n"),tag(:br))%></h4>
    <p class="text-center"><img src=<%=@post.user.image %> class = "comment_icon" alt="アイコン"><%=link_to @post.user.nickname, user_path(@post.user_id),class:"nickname" %></p>
    <% if user_signed_in? %>
    <% if current_user.id == @post.user_id %>
      <div class="text-center">
        <%= link_to "編集", edit_post_path(@post.id),class:"btn btn-outline-success btn-lg" %>
        <%= link_to "削除", post_path(@post.id), data: { turbo_method: :delete } ,class:"btn btn-outline-danger btn-lg" %>
      </div>
    <% end %>
    <% end %>
  </div>

  <nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page">投稿</li>
  </ol>
</nav>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%=link_to 'ホーム', root_path %></li>
    <li class="breadcrumb-item active" aria-current="page"><%=link_to '閲覧室', posts_index_path %></li>
    <li class="breadcrumb-item active" aria-current="page">投稿</li>
  </ol>
</nav>

<%= render "layouts/like" %>
<%= render "layouts/favorite" %>

<% if user_signed_in? %>
<h5 class="text-center">メッセージを届ける</h5>
   <div class="mx-auto" style="max-width: 650px">
      <%# <div class="card-body"> %>
        <%= form_with model:[@post,@comment] do |f| %>
        <div class="text-center">
          <%= f.text_area :comment,required: true, class: "form-control" %>
        </div>
        <div class="text-center">
          <%= f.submit "送信", class:"btn btn-outline-success" %>
        </div>
        <% end %>
      <%# </div> %>
    </div>
<% end %>
 <h5 class="text-center">メッセージ</h5>
<div class="card mx-auto" style="max-width: 650px">
  <%# <div class="card-body"> %>
    <% @post.comments.each do |comment| %>
      <div class="text-center">
        <h5><%=safe_join(comment.comment.split("\n"),tag(:br)) %></h5>
        <small><%= comment.updated_at.to_s(:db) %></small>
      </div>
      <div class="text-center">
        <img src=<%=comment.user.image %> class = "comment_icon" alt="アイコン">
        <%=link_to comment.user.nickname, user_path(comment.user_id),class:"nickname" %> 
       </div>
      <div class="text-center">
        <% if comment.user == current_user %>
          <%= link_to "削除", post_comment_path(comment.post,comment), data: { turbo_method: :delete }, class:"btn btn-outline-danger btn-sm" %>
        <% end %>
      </div>
 <% end %>
    
  <%# </div> %>
</div> 
</div>
<%= render "layouts/footer" %>