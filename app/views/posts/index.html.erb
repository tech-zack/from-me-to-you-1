<header class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <%=link_to '閲覧室', libraries_show_path, class: "navbar-brand"%>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <%=link_to 'ホーム', root_path, class: "nav-link active"%>
        </li>
        <li class="nav-item">
        <% if user_signed_in?%>
        <li><%= link_to "#{current_user.nickname}さん",acount_path(current_user.id), class: "nav-link" %></li>
        <li><%=link_to 'ログアウト', destroy_user_session_path, class: "nav-link"%></li>
        <% else %>
        <li><%=link_to '新規登録', new_user_registration_path,class: "nav-link"%></li>
        <li><%=link_to 'ログイン', new_user_session_path, class: "nav-link"%></li>
        <% end %>
        </li>
        <li>
          <%=link_to '届ける', new_post_path, class: "nav-link"%>
        </li>
      </ul>
      <%= search_form_for @q, url: search_posts_path do |f| %>
        <div class="d-flex">
          <%= f.search_field :title_cont, required: true,class: "form-control me-2"%>
          <%= f.submit '検索', class: "btn btn-outline-success" %>
        </div>
      <% end %>
    </div>
  </div>
</header>
<img src="/ogasuta458A7873.jpg" class="d-block w-100" height=400 alt="言葉">

<h2 class="text-center">投稿一覧</h2>

<div class="container">
  <div class="row row-cols-1 row-cols-md-3">
    <% @posts.each do |post| %>
     <div class="col"> 
      <div class="card"> 
        <%= image_tag post.image, class: "card-img-top"%>
        <div class="card-body">
          <h5 class="text-center"><%=post.title%></h5>
          <p class="text-center"><%=post.text%></p>
          <%=link_to '続きを読む', post_path(post.id), class: "btn btn-outline-success"%>
        </div>
      </div>
    </div> 
  <% end %>
 </div>
</div>

<%= paginate @posts %>
