<% @posts.each do |post| %>
 <div class="row row-cols-1 row-cols-md-4 text-center">
  <div class="col"> 
    <div class="card"> 
      <%= image_tag post.image, class: "card-img-top"%>
      <div class="card-body">
        <h5 class="text-center"><%=post.title%></h5>
        <p class="text-center"><%=post.text%></p>
        <a href=" " class="btn btn-primary">Go somewhere</a>
      </div>
    </div>
  </div>
 </div>
<% end  %>